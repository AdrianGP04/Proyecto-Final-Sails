  <body>
    <div class="title-bar2">
      <div>
        <a href="/admin"><img style="width:30px;" src="/styles/home1.png"></img></a>
      </div>
      <center>
        <a class="tit2" href="/admin">ADMIN CENTER</a>
      </center>
    </div>
    <ul class="menu expanded">
      <li class="m-exp"><a class="m-as" href="/add">Add Topic/Question</a></li>
      <li class="m-exp" disabled><a class="m-as" href="/upd">Update Topic/Question</a></li>
      <li class="m-exp"><a  class="m-as" href="/seet">See All topics</a></li>
      <li class="m-exp"><a class="m-as" href="/seeq">See All Questions</a></li>
      <li class="m-exp"><a class="m-as" href="/rm">Delete Topic/Question</a></li>
    </ul>
    <br/>
<%if ( topicList.length > 0) { %>
  <br/>
    <form id="addQuestion" action="/addQuestion" method="post">
    <t1><strong style="font-size: 20px;"> Add a question right bellow</strong></t1>
      <div class="row">
        <div class="medium-12 columns">
          <br/>
          <label>Question
            <input type="text" id="Question" name="Question">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="medium-12 columns">
          <label>Correct Answer
            <input type="text" id="Cans" name="CorrectAnswer">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="medium-12 columns">
          <label>Incorrect Answer 1
            <input type="text" id="icans1" name="incorrectAnswer1">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="medium-12 columns">
          <label>Incorrect Answer 2
            <input type="text" id="icans2" name="incorrectAnswer2">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="medium-12 columns">
          <label>Incorrect Answer 3
            <input type="text" id="icans3" name="incorrectAnswer3">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="medium-12 columns">
          <label>Thematic (id)
            <select name="Thematic">
              <% for ( topicname of topicList){%>
              <option value= '<%= topicname %> '>
                <%= topicname %>
              </option>
              <% } %>
            </select>
          </label>
        </div>
      </div>

      <div style="text-align: center;">
        <button type="submit">Add Question</button>
      </div>
    </form>
  <% } else {%>
    <p> You need to add a topic before adding a question </p>
  <% } %>

    <br/><br/><br/>

    <form id="addTopic" action="/addTopic" method="post">
      <t1><strong style="font-size: 20px;"> Add a topic right bellow </strong></t1>
      <div class="row">
        <div class="medium-12 columns">
          <br/>
          <label>Topic name
            <input type="text" id="Topic" name="TopicName">
          </label>
        </div>
      </div>

      <div style="text-align: center;">
        <button type="submit">Add Topic</button>
      </div>
    </form>
    <br/><br/>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type='text/javascript' src='/js/crear.js'></script>
  </body>
